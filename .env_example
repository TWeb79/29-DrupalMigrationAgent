# DrupalMind â€” Environment Configuration
# Copy this file to .env and fill in your values
# cp .env_example .env

# =============================================
# LLM Provider Configuration
# =============================================
# Options: anthropic, openai, ollama
LLM_PROVIDER=anthropic

# ---------------------------------------------
# Anthropic (Claude)
# ---------------------------------------------
ANTHROPIC_API_KEY=sk-ant-your-key-here

# ---------------------------------------------
# OpenAI (GPT-4)
# ---------------------------------------------
OPENAI_API_KEY=sk-your-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o

# ---------------------------------------------
# Ollama (Local)
# ---------------------------------------------
# For Docker: use host.docker.internal to reach host's Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# =============================================
# Drupal Database Configuration
# =============================================
MYSQL_ROOT_PASSWORD=rootsecret123
MYSQL_DATABASE=drupal
MYSQL_USER=drupal
MYSQL_PASSWORD=drupalpass123

# =============================================
# Drupal API Configuration
# =============================================
DRUPAL_API_URL=http://drupal
DRUPAL_API_USER=apiuser
DRUPAL_API_PASS=apiuser

# =============================================
# Agent Configuration
# =============================================
AGENT_MODEL=claude-sonnet-4-20250514
AGENT_MAX_RETRIES=3
AGENT_LOG_LEVEL=info

# =============================================
# Redis Configuration
# =============================================
REDIS_URL=redis://redis:6379

# =============================================
# v2 Quality Thresholds
# =============================================
SIMILARITY_THRESHOLD=0.85
MIN_SIMILARITY_THRESHOLD=0.30
MAX_MICRO_ITERATIONS=5
MAX_MESO_ITERATIONS=3
MAX_BUILD_RETRIES=2

# =============================================
# v2 Feature Flags
# =============================================
ENABLE_VISUAL_DIFF=true
ENABLE_MISSING_PIECE_DETECTION=true
ENABLE_GAP_REPORT=true
ENABLE_HUMAN_REVIEW=true
DEBUG_MODE=false
